<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.tchuba.robotremote.ControlActivity" >

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/forward"
        android:layout_below="@+id/forward"
        android:drawableRight="@drawable/stop" />

    <Button
        android:id="@+id/backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/stop"
        android:layout_below="@+id/stop"
        android:drawableRight="@drawable/backward" />

    <Button
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/forward"
        android:layout_toRightOf="@+id/forward"
        android:drawableRight="@drawable/right" />

    <Button
        android:id="@+id/backRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/backward"
        android:layout_alignBottom="@+id/backward"
        android:layout_toRightOf="@+id/backward"
        android:drawableRight="@drawable/backright" />

    <Button
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forward"
        android:layout_alignBottom="@+id/forward"
        android:layout_toLeftOf="@+id/forward"
        android:drawableRight="@drawable/left" />

    <CheckBox
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/backLeft"
        android:layout_alignRight="@+id/backRight"
        android:layout_below="@+id/backward"
        android:layout_marginTop="32dp"
        android:text="@string/distance" />

    <CheckBox
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/distance"
        android:layout_alignRight="@+id/distance"
        android:layout_below="@+id/distance"
        android:text="@string/line" />

    <Button
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:drawableRight="@drawable/forward" />

    <Button
        android:id="@+id/backLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distance"
        android:layout_alignLeft="@+id/left"
        android:drawableRight="@drawable/backleft" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/quit" />

</RelativeLayout>